<section class="clearfix">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h3>Job Listings</h3>
        <table class="table">
          <thead>
            <tr>
              <th>Job Title</a>
              </th>
              <th>Job Description</th>
              <th>Add Bid</th>
            </tr>
          </thead>
          <tbody>
            {{#each jobs}}
              <tr>
                <td><a href="/jobs/{{id}}">{{title}}</a></td>
                <td>{{description}}</td>
                <td>
                  <form id="job" method="POST" action="/jobs/{{id}}/bids">
                    <div class="form-group">
                      <label for="amount">Bid</label>
                      <input class="text" name="amount" type="text" required />
                    </div>
                    <div class="form-group">
                      <label for="duration">How long will it take to complete?</label>
                      <input type="text" name="duration" class="integer" placeholder="In days..." required/>
                    </div>
                    <button type="submit" class="btn-submit">Submit</button>
                  </form>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>